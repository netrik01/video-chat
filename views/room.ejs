<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>video-chat-room</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
    integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

  <script src="/socket.io/socket.io.js"></script>
  <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
  <link rel="stylesheet" href="../stylesheets/room.css" />
  <script>
    const ROOM_ID = "<%= roomID %>";
  </script>
</head>

<body>

  <div class="header">
    <div class="logo">
      <h2>Video chat</h2>
    </div>
    <div class="nav-bar">
      <div id="inviteButton" class="options-button" title="Invite">
        <i class="fas fa-user-plus"></i>
      </div>
      <div id="stopVideo" class="options-button" title="Video">
        <i class="fa fa-video-camera"></i>
      </div>
      <div id="muteButton" class="options-button" title="Audio">
        <i class="fa fa-microphone"></i>
      </div>

      <!-- ---------share-screen--------- -->
      <!-- <div id="share-screen" class="options-button " title="Share screen">
        <i class="ri-cast-fill "></i>
      </div> -->
      <!-- ---------share-screen--------- -->
      
      <div class="options-button record-btn active-start" title="Record">
        <i class="fa-solid fa-record-vinyl"></i>
      </div>
      <div class="options-button stop-record-btn active-stop" title="Stop recording">
        <i class="fa-solid fa-record-vinyl"></i>
      </div>
      <div id="chat-btn" class="options-button" title="Open chat">
        <i class="fa-sharp fa-solid fa-comment"></i>
      </div>
      <div class="options-button day-night s-icon" title="Dark mode">
        <i class="fas"></i>
      </div>
      <a href="/logout">
        <div id="leaveButton" class="options-button" title="Leave">
          <i class="fa-solid fa-right-from-bracket"></i>
        </div>
      </a>
    </div>
  </div>

  <div class="main">
    <div class="container">
      <div class="main-left ">
        <div id="video-grid">
        </div>
      </div>
      <div class="main-right">
        <div class="main__chat_window">
          <div class="messages">
          </div>
        </div>
        <div class="main__message_container">
          <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
          <div id="send" class="send-button">
            <i class="fa fa-plus" aria-hidden="true"></i>
          </div>
        </div>
      </div>
    </div>
    <script src="../javascripts/room_script.js"></script>
    <script src="../javascripts/dark_mode.js"></script>
</body>

</html>